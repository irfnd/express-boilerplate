{
	"name": "express-boilerplate",
	"description": "A boilerplate/starter project for quickly building RESTful APIs using Node.js and Express with some pre-built features.",
	"version": "1.0.0",
	"main": "app.js",
	"author": "Irfnd <irfandiabimanyu@gmail.com>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"dev": "nodemon app.js",
		"start": "node app.js",
		"lint": "eslint .",
		"lint:fix": "eslint --fix",
		"format": "prettier --write ./**/*.{js,md,json} --config ./.prettierrc.json"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,json,md}": [
			"eslint . --fix",
			"prettier --write ."
		]
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.2",
		"express": "^4.18.1",
		"helmet": "^6.0.0",
		"http-status": "^1.5.3",
		"morgan": "^1.10.0",
		"xss-clean": "^0.1.1"
	},
	"devDependencies": {
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1"
	}
}
